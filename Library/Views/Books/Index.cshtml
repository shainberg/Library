@model IEnumerable<Library.Models.Book>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

@Scripts.Render("~/Scripts/paradise/book.js")


<h2>Books</h2>

<p>
    <a href="@Url.Action("Create")" title="new" >
        <span class="glyphicon glyphicon-plus"></span>
        add a new book
    </a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.author)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.language)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.series)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.number)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr >
        <td>
            @Html.DisplayFor(modelItem => item.id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.author)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.language)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.series)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.number)
        </td>
        <td>
            @*<span id="details" title="Details" data-toggle="modal" data-target="#detailsModal" class="glyphicon glyphicon-list-alt"></span>*@
            <span title="Details" onclick="openBookDetailsModal(@Html.DisplayFor(modelItem => item.id))" class="glyphicon glyphicon-list-alt"></span>
            @*<a href="@Url.Action("Details", new { id = item.id })" title="Details">
                <span title="Details" class="glyphicon glyphicon-list-alt"></span>
            </a>*@
            |
            <a href="@Url.Action("Edit", new { id = item.id })" title="Edit">
                <span title="Delete" class="glyphicon glyphicon-edit"></span>
            </a>
            |
            <span title="Delete"
                  onclick="openDeleteValidation(@Html.DisplayFor(modelItem => item.id))"
                  class="glyphicon glyphicon-trash"></span>


            @*<a href="@Url.Action("Delete", new { id = item.id })" title="Delete">
                <span title="Delete" class="glyphicon glyphicon-trash"></span>
            </a>*@
        </td>
    </tr>
}
</table>

<!-- Modal -->
<div id="deleteModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Are you sure you want to delete this?</h4>
            </div>
            <div class="modal-body">
                <div class="wrap">
                    <img class="book-picture" src="../../Img/No_Image_Available.png" />
                    <div class="details-div">
                        <h4 class="book-title" id="deleteBookTitle"></h4> &nbsp;
                        <h5 class="book-series" id="deleteBookSeries"></h5>
                        <h6 class="sub-title" id="deleteBookAuthor"></h6>
                        <h6 class="sub-title" id="detailsCopies"></h6>
                    </div>
                </div>
                <div class="details-class">
                    <div class="book-summery" id="deleteBookSummery">
                    </div>
                    <p class="book-publish-data" id="deleteBookPublishData">
                    </p>
                    <p class="book-category" id="deleteBookCategory"></p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default">Delete</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">cancel</button>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal -->
<div id="detailsModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Details</h4>
            </div>
            <div class="modal-body">
                <div id="wrap">
                    <img class="book-picture" src="../../Img/No_Image_Available.png" />
                    <div class="details-div">
                        <h4 class="book-title" id="detailsBookTitle"></h4> &nbsp;
                        <h5 class="book-series" id=" detailsbookseries"></h5>
                        <h6 class="sub-title" id="detailsBookAuthor"></h6>
                        <h6 class="sub-title" id="detailsCopies"></h6>
                    </div>
                </div>
                <div class="details-class">
                    <div class="book-summery" id="detailsBookSummery" >
                    </div>
                    <p class ="book-publish-data" id="detailsBookPublishData">
                    </p>
                    <p class="book-category" id="detailsBookCategory"></p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
</div>