    <h2>Books</h2>
    <span class="glyphicon glyphicon-plus" title="New" onclick="openBookModal()"></span>
    <table  class="table table-striped">
        <thead>
            <tr>
                <th>Title</th>
                <th>Author</th>
                <th>Series</th>
                <th>Number</th>
                <th>Publication Year</th>
                <th>Available Copies</th>
                <th></th>
            </tr>
        </thead>
        <tfoot>
            <tr>
                <th>Title</th>
                <th>Author</th>
                <th>Series</th>
                <th>Number</th>
                <th>Publication Year</th>
                <th>Available Copies</th>
                <th></th>
            </tr>
        </tfoot>
        <tbody id="adminBooksTableBody"></tbody>
    </table>
</div>

<div id="best-books" class="tab-pane">
    <h2>Most Borrowed Books</h2>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Title</th>
                <th>Author</th>
                <th>Series</th>
                <th>Number</th>
                <th>Publication Year</th>
                <th>Available Copies</th>
                <th></th>
            </tr>
        </thead>
