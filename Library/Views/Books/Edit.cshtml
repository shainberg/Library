@model Library.Models.Book

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<h2 style="display:inline">Edit</h2> &nbsp; <h4 style="display:inline">@Model.title</h4> <h6 style ="display:inline"> / @Model.author</h6>

